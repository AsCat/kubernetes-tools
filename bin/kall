if [[ $# -eq 1 ]] && [[ $1 != '-h' ]]; then
	echo "Listing all resources in namespace $1"
	kubectl get all -n $1
elif [[ $# -eq 0 ]] || ([[ $# -eq 1 ]] && [[ $1 == '-h' ]]) ; then
	echo "Kubernetes Tools - kall"
    echo
 	echo "Get all resources of a [namespace]: kall [namespace]"
else
	echo "invalid parameters, use -h for help"
fi