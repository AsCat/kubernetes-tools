if [[ $# -eq 0 ]] ; then
	kubectl get ns
elif [[ $# -eq 1 ]] && [[ $1 != "-h" ]] ; then
	kubectl get ns | grep $1
elif [[ $# -eq 1 ]] && [[ $1 == "-h" ]] ; then
    echo "Kubernetes Tools - kns"
    echo
    echo "List all namespaces: kns"
    echo "Search [namespace]: kns [namespace]"
else
	echo "invalid parameters, use -h for help"
fi